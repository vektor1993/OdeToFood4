@model IEnumerable<_2.OdeToFood4.Models.RestaurantListViewModel>

<div id="restaurantList">
    @foreach (var item in Model)
    {
        <div>
            <h4>
                @item.Name
            </h4>
            <div>@item.City, @item.Country</div>
            <div>
                Reviews: @item.CountOfReviews
            </div>
            <hr />
        </div>
    }
</div>

